<?xml version="1.0" encoding="utf-8"?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true" xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd ">
    <extensions>
        <add assembly="NLog.Web.AspNetCore" />
    </extensions>
    <!-- the targets to write to -->
    <targets>
        <!-- write logs to file  -->
        <target name="file" xsi:type="File" fileName="../logs/${date:format=yyyy-MM-dd}-app.log"
                layout="${longdate} ${level} ${message} ${exception:format=ToString}" />
        <target name="file2" xsi:type="File" fileName="../logs/${date:format=yyyy-MM-dd}-app-errors.log"
                layout="${longdate} ${level} ${message} ${exception:format=ToString}" />
        <target name="console" xsi:type="Console" />
    </targets>

    <!-- rules to map from logger name to target -->
    <rules>
        <logger name="Microsoft*" maxlevel="Info" final="true" />
        <logger name="*" minlevel="Trace" writeTo="file" />
        <logger name="*" minlevel="Warn" writeTo="file2" />
        <logger name="*" minlevel="Trace" writeTo="console" >
            <filters>
                <when condition="equals('${environment:ASPNETCORE_ENVIRONMENT}','Production')" action="Ignore"/>
            </filters>
        </logger>
    </rules>
</nlog>